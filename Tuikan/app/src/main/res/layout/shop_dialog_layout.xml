<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minWidth="260dp"
              android:layout_centerInParent="true"
              android:paddingTop="16dp"
              android:background="@drawable/bg_dialog">

    <TextView
        android:id="@+id/title"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="任务列表"
        android:textSize="@dimen/font_size_large_high"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="1dp"
        android:background="#E4E4E4" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_book"
        android:layout_weight="9"
        android:background="@color/item_green"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/book_img"
            android:layout_width="100dp"
            android:layout_height="104dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/qiandao"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/book_img"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_normal_high"
            android:textColor="@color/white_light"
            android:text="每 日 签 到"
            android:singleLine="false" />

        <TextView
            android:id="@+id/book_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_title"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:text="每天在伴读上阅读书籍满15分钟即可打卡"
            android:layout_toEndOf="@id/book_img"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/book_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_writer"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/book_img"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/book_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_writer"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/book_writer"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="1dp"
        android:background="#E4E4E4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_book2"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:background="#ffa922">
        <ImageView
            android:id="@+id/book_img2"
            android:layout_width="100dp"
            android:layout_height="104dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/timee"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/book_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/book_img2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_normal_high"
            android:textColor="@color/white_light"
            android:text="读 书 时 长"
            android:singleLine="false" />

        <TextView
            android:id="@+id/book_writer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_title2"
            android:layout_marginTop="8dp"
            android:text="每满半个小时即可领取一次"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/book_img2"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/book_progress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_writer2"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/book_img2"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/book_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_writer2"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/book_writer2"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="1dp"
        android:background="#E4E4E4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_book3"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:background="#28adfb">
        <ImageView
            android:id="@+id/book_img3"
            android:layout_width="100dp"
            android:layout_height="104dp"
            android:background="@mipmap/share"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/book_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/book_img3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_normal_high"
            android:textColor="@color/white_light"
            android:text="分 享 书 评"
            android:singleLine="false" />

        <TextView
            android:id="@+id/book_writer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_title3"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:text="在世界里发表一次书评，可获得地瓜干 x 2"
            android:layout_toEndOf="@id/book_img3"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/book_progress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_writer3"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/book_img3"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

        <TextView
            android:id="@+id/book_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_writer3"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/book_writer3"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_size_middle" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="4dp"
        android:background="#E4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negtive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:text="退 出"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <View
            android:id="@+id/column_line"
            android:layout_width="1px"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="#E4E4E4" />

        <Button
            android:id="@+id/positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:singleLine="true"
            android:text="确 定"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="5dp"
        android:background="#E4E4E4" />
</LinearLayout>