<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/rl_book"
    android:layout_weight="9"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_normal_high">
    <ImageView
        android:id="@+id/book_img"
        android:layout_width="72dp"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/book_img"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_normal_high"
        android:textColor="@color/gray_dark"
        android:singleLine="false" />

    <TextView
        android:id="@+id/book_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/book_img"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_middle" />

    <TextView
        android:id="@+id/book_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_writer"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/book_img"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_middle" />

    <TextView
        android:id="@+id/book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_writer"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/book_writer"
        android:layout_marginStart="@dimen/spacing_small"
        android:textSize="@dimen/font_size_middle" />

    </RelativeLayout>

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:text="  删 除  "
        android:textSize="25sp"
        android:layout_weight="1"
        android:textColor="@color/white_light"
        android:background="#FF0000"
        android:gravity="center"
        android:visibility="gone"
        android:padding="8dp"/>

</LinearLayout>
