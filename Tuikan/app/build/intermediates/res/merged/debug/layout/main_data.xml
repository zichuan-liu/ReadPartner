<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_green">

    <TextView
        android:id="@+id/rv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:includeFontPadding="false"
        android:text="60"
        android:textColor="@color/white"
        android:textSize="72dp" />

    <TextView
        android:id="@+id/rv_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:text="本周阅读时长/分钟"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rv_time"
        android:layout_toRightOf="@+id/rv_time"
        android:background="@mipmap/ic_gift" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/qiandao"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/button_shape"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="签到"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/rv_award"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="10dp"
        android:text="今日奖励："
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/rv_award_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rv_award"
        android:layout_toEndOf="@+id/rv_award"
        android:background="@mipmap/ic_digua" />

    <TextView
        android:id="@+id/rv_award_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rv_award_gift"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/rv_award_gift"
        android:text="地瓜干"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>